@model WarehouseManagementMVC.Models.Branch

@{
    ViewBag.Title = Model.Location;
}
<h1>@Model.Location Branch</h1>


<div>
    <hr />
    <h3>Items available in the branch</h3>

    <table class="table table-bordered">
        <tr>
            <th>Item Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Discount</th>
        </tr>
        @{
            if (Model.BItems == null)
            {
                <tr>
                 
                        Currently no items added.
                        <a href="@Url.Action("AddBranchItems", "Branch", routeValues:new {id=Model.Id })" class="btn btn-default">
                            Add
                            <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
                        </a>
                    
                </tr>

            }
            else
            {
                foreach (var item in Model.BItems)
                {
                    <tr>
                        <td>@item.Item.Name</td>
                        <td>@item.Item.Price</td>
                        <td>@item.Item.Quantity</td>
                        <td>@item.DiscountPercentage</td>
                    </tr>
                }
            } }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
